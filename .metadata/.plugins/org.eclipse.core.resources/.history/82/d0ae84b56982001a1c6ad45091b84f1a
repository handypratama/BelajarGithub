package ulertangga;

import java.util.Random;
import java.util.Scanner;
import java.util.Vector;

public class Main {
	Scanner scan = new Scanner(System.in);
	Random  Rand = new Random();
	Vector <getset> Gim = new Vector<>();
	int P1 = 0;
	int P2 = 0;
	int P3 = 0;
	int choose = 0;
	int Dadu,Dadu_2,Dadu_3;
	int Geser = 0,Geser_2 = 0,Geser_3 = 0;
	int Flag = 0,Flag_2 = 0,Flag_3 = 0;
	p_one P_1;
	p_two  P_2;
	p_three P_3;
	
	public void twoPemains(){
		int ronde = 1;
		
		do{
			System.out.printf("\n");
			System.out.printf("\n");
			System.out.printf("ROUND %d\n",ronde);
			System.out.printf("----------");
			System.out.printf("\n");
			Geser = P1;
			System.out.printf("\n");
			System.out.print("Pemain A Memutar Dadu(press enter to roll): ");
			String input1 = scan.nextLine();
			
			
			int val = 0;
			for (int idx = 0; idx < input1.length(); idx++){
				val+= input1.charAt(idx);
			}
			val = val % 10;
			if (val == 0){
				val = 1;
			}
			
			Dadu = 1+ Rand.nextInt(6);
			Flag = P1 + Dadu;
		
			if(Flag>100){
				Flag = 100 - (Flag - 100);
			}if(Flag == 13){
				Flag = 7;
				System.out.println("IYAKK kena uler turun deh ke 7");
			}if(Flag == 25){
				Flag = 40;
				System.out.println("YEYY ada tangga sana manjat ke 40");
			}if(Flag == 50 ){
				Flag = 38;
				System.out.println("IYAKK kena uler turun deh ke 38");
			}if(Flag == 63 ){
				Flag = 78;
				System.out.println("YEYY ada tangga sana manjat ke 78");
			}if(Flag == 83 ){
				Flag = 97;
				System.out.println("YEYY ada tangga sana manjat ke 97");
			}if(Flag == 95 ){
				Flag = 76;
				System.out.println("IYAKK kena uler turun deh ke 76");
			}
			P_1 = new p_one(Dadu,Geser,Flag);
			
			Gim.add(P_1);
		
			P1 = Flag;
			System.out.printf("Roll dadu :  %-3d                 \n",Dadu);
			System.out.printf("pindah dari  %-2d  ke  %-3d         \n",Geser,Flag);

			ronde++;
			if(Flag == 100 ){
				break;
			}	
	
			Geser_2 = P2;
			System.out.printf("\n");
			System.out.print("Pemain B Memutar Dadu(press enter to roll): ");
			String input2 = scan.nextLine();
			
			int val2 = 0;
			for (int idx = 0; idx < input2.length(); idx++){
				val2+= input2.charAt(idx);
			}
			val2 = val2 % 10;
			if (val2 == 0){
				val2 = 1;
			}
			Dadu_2 = 1 + Rand.nextInt(6);
			Flag_2 = P2 + Dadu_2;
		
			if(Flag_2 > 100){
				Flag_2 = 100 - (Flag_2 - 100);
			}if(Flag>100){
				Flag = 100 - (Flag - 100);
			}if(Flag == 13){
				Flag = 7;
				System.out.println("IYAKK kena uler turun deh ke 7");
			}if(Flag == 25){
				Flag = 40;
				System.out.println("YEYY ada tangga sana manjat ke 40");
			}if(Flag == 50 ){
				Flag = 38;
				System.out.println("IYAKK kena uler turun deh ke 38");
			}if(Flag == 63 ){
				Flag = 78;
				System.out.println("YEYY ada tangga sana manjat ke 78");
			}if(Flag == 83 ){
				Flag = 97;
				System.out.println("YEYY ada tangga sana manjat ke 97");
			}if(Flag == 95 ){
				Flag = 76;
				System.out.println("IYAKK kena uler turun deh ke 76");
			}
			P_2 = new p_two (Dadu_2,Geser_2,Flag_2);
			Gim.add(P_2);
			
			P2 = Flag_2;
			System.out.printf("Roll dadu :  %-3d                 \n",Dadu_2);
			System.out.printf("pindah dari  %-2d  ke  %-3d         \n",Geser_2,Flag_2);
			if(Flag_2 == 100){
				break;
			}
		}while(ronde < 26);
		if(Flag > Flag_2){
			System.out.printf("\n");
			System.out.println("Pemain A Menang!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("\n");
			
		}else{
			System.out.printf("\n");
			System.out.println("Pemain B Menang!!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("|Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("|Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("\n");
		}
	}
	public void threePemains(){
int ronde = 1;
		
		do{
			System.out.printf("\n");
			System.out.printf("\n");
			System.out.printf("ROUND %d\n",ronde);
			System.out.printf("----------");
			System.out.printf("\n");
			Geser = P1;
			System.out.printf("\n");
			System.out.print("Pemain A Memutar Dadu(press enter to roll): ");
			String input1 = scan.nextLine();
			
			
			int val = 0;
			for (int idx = 0; idx < input1.length(); idx++){
				val+= input1.charAt(idx);
			}
			val = val % 10;
			if (val == 0){
				val = 1;
			}
			
			Dadu = 1+ Rand.nextInt(6);
			Flag = P1 + Dadu;
		
			if(Flag>100){
				Flag = 100 - (Flag - 100);
			}if(Flag>100){
				Flag = 100 - (Flag - 100);
			}if(Flag == 13){
				Flag = 7;
				System.out.println("IYAKK kena uler turun deh ke 7");
			}if(Flag == 25){
				Flag = 40;
				System.out.println("YEYY ada tangga sana manjat ke 40");
			}if(Flag == 50 ){
				Flag = 38;
				System.out.println("IYAKK kena uler turun deh ke 38");
			}if(Flag == 63 ){
				Flag = 78;
				System.out.println("YEYY ada tangga sana manjat ke 78");
			}if(Flag == 83 ){
				Flag = 97;
				System.out.println("YEYY ada tangga sana manjat ke 97");
			}if(Flag == 95 ){
				Flag = 76;
				System.out.println("IYAKK kena uler turun deh ke 76");
			}
			P_1 = new p_one(Dadu,Geser,Flag);
			Gim.add(P_1);
			P1 = Flag;
			System.out.printf("Roll dadu :  %-3d                 \n",Dadu);
			System.out.printf("pindah dari  %-2d  ke  %-3d         \n",Geser,Flag);
			
			ronde++;
			if(Flag == 100 ){
				break;
			}	
	
			Geser_2 = P2;
			System.out.printf("\n");
			System.out.print("Pemain B Memutar Dadu(press enter to roll): ");
			String input2 = scan.nextLine();

			int val2 = 0;
			for (int idx = 0; idx < input2.length(); idx++){
				val2+= input2.charAt(idx);
			}
			val2 = val2 % 10;
			if (val2 == 0){
				val2 = 1;
			}
			Dadu_2 = 1 + Rand.nextInt(6);
			Flag_2 = P2 + Dadu_2;
		
			if(Flag_2 > 100){
				Flag_2 = 100 - (Flag_2 - 100);
			}if(Flag>100){
				Flag = 100 - (Flag - 100);
			}if(Flag == 13){
				Flag = 7;
				System.out.println("IYAKK kena uler turun deh ke 7");
			}if(Flag == 25){
				Flag = 40;
				System.out.println("YEYY ada tangga sana manjat ke 40");
			}if(Flag == 50 ){
				Flag = 38;
				System.out.println("IYAKK kena uler turun deh ke 38");
			}if(Flag == 63 ){
				Flag = 78;
				System.out.println("YEYY ada tangga sana manjat ke 78");
			}if(Flag == 83 ){
				Flag = 97;
				System.out.println("YEYY ada tangga sana manjat ke 97");
			}if(Flag == 95 ){
				Flag = 76;
				System.out.println("IYAKK kena uler turun deh ke 76");
			}
			P_2 = new p_two (Dadu_2,Geser_2,Flag_2);
			Gim.add(P_2);
			P2 = Flag_2;

			System.out.printf("Roll dadu :  %-3d                 \n",Dadu_2);
			System.out.printf("pindah dari  %-2d  ke  %-3d         \n",Geser_2,Flag_2);

		
		
			if(Flag_2 == 100){
				break;
			}	
			Geser_3 = P3;
			System.out.printf("\n");
			System.out.print("Pemain C Memutar Dadu(press enter to roll): ");
			String input3 = scan.nextLine();
			
			
			int val3 = 0;
			for (int idx = 0; idx < input2.length(); idx++){
				val3+= input2.charAt(idx);
			}
			val3 = val3 % 10;
			if (val3 == 0){
				val3 = 1;
			}
			Dadu_3 = 1 + Rand.nextInt(6);
			Flag_3 = P3 + Dadu_3;
		
			if(Flag_3 > 100){
				Flag_3 = 100 - (Flag_3 - 100);
			}if(Flag>100){
				Flag = 100 - (Flag - 100);
			}if(Flag == 13){
				Flag = 7;
				System.out.println("IYAKK kena uler turun deh ke 7");
			}if(Flag == 25){
				Flag = 40;
				System.out.println("YEYY ada tangga sana manjat ke 40");
			}if(Flag == 50 ){
				Flag = 38;
				System.out.println("IYAKK kena uler turun deh ke 38");
			}if(Flag == 63 ){
				Flag = 78;
				System.out.println("YEYY ada tangga sana manjat ke 78");
			}if(Flag == 83 ){
				Flag = 97;
				System.out.println("YEYY ada tangga sana manjat ke 97");
			}if(Flag == 95 ){
				Flag = 76;
				System.out.println("IYAKK kena uler turun deh ke 76");
			}
			P_3 = new p_three (Dadu_3,Geser_3,Flag_3);
			Gim.add(P_3);
			P3 = Flag_3;

			System.out.printf("Roll dadu :  %-3d                 \n",Dadu_3);
			System.out.printf("pindah dari  %-2d  ke  %-3d         \n",Geser_3,Flag_3);
	
	
			if(Flag_3 == 100){
				break;
			}	
		}while(ronde < 26);
		
		if(Flag > Flag_2 && Flag > Flag_3 && Flag_2 > Flag_3){
			System.out.printf("\n");
			System.out.println("Pemain A Menang!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_3);
			System.out.printf("\n");
			
		}
		else if(Flag > Flag_2 && Flag > Flag_3 && Flag_2 < Flag_3){
			System.out.printf("\n");
			System.out.println("Pemain A Menang!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_3);
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("\n");
			
		}
		else if(Flag > Flag_2 && Flag > Flag_3 && Flag_2 == Flag_3 ){
			System.out.printf("\n");
			System.out.println("Pemain A Menang!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_2);
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_3);
			System.out.printf("\n");
			
		}
		else if(Flag_2 > Flag && Flag_2 > Flag_3 && Flag > Flag_3){
			System.out.printf("\n");
			System.out.println("Pemain B Menang!!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_3);
			System.out.printf("\n");
		}
		else if(Flag_2 > Flag && Flag_2 > Flag_3 && Flag < Flag_3){
			System.out.printf("\n");
			System.out.println("Pemain B Menang!!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_3);
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("\n");
		}
		else if(Flag_2 > Flag && Flag_2 > Flag_3 && Flag == Flag_3){
			System.out.printf("\n");
			System.out.println("Pemain B Menang!!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_3);
			System.out.printf("\n");
		}
		else if(Flag_3 > Flag && Flag_3 > Flag_2 && Flag < Flag_2){
			System.out.printf("\n");
			System.out.println("Pemain C Menang!!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_3);
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("\n");
		}
		else if(Flag_3 > Flag && Flag_3 > Flag_2 && Flag > Flag_2){
			System.out.printf("\n");
			System.out.println("Pemain C Menang!!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_3);
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("\n");
		}
		else if(Flag_3 > Flag && Flag_3 > Flag_2 && Flag == Flag_2){
			System.out.printf("\n");
			System.out.println("Pemain C Menang!!!!");
			System.out.println("Score Board");
			System.out.printf("\n");
	
			System.out.printf("Pemain C dengan score:  %-3d         \n",Flag_3);
			System.out.printf("Pemain A dengan score:  %-3d         \n",Flag);
			System.out.printf("Pemain B dengan score:  %-3d         \n",Flag_2);
			System.out.printf("\n");
		}
	}
	
	public void printMenu() {
		System.out.println("Snakes Ladder Game");
		System.out.println("1. Play (2P)");
		System.out.println("2. Play (3P)");
		System.out.println("3. Exit");
	}
	public void getMenuInput() {
		do{
			printMenu();
			System.out.print(" Input : ");
			try {
				choose = scan.nextInt();
			} catch (Exception e) {
				choose = -1;
				System.out.println("Input harus berupa angka !!");
				System.out.println("");
			}
			scan.nextLine();
		}while(choose < 1 || choose > 3);
	}
	public Main() {
		do{
			
			getMenuInput();
			
			switch(choose){
			case 1:{
				twoPemains();
				System.out.println("Press enter to continue...");
				scan.nextLine();
				break;
			}
				case 2:{
					threePemains();
					System.out.println("Press enter to continue...");
					scan.nextLine();
					break;
				}
				case 3:{
					System.out.println("Terima kasih telah menggunakan aplikasi ini!");
					break;
				}
			}
		}while(choose != 3);
		
	}
	public static void main(String[] args) {
		new Main();
	}

}
